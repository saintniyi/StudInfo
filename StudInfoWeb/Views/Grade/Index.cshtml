@model IEnumerable<StudInfoModel.Grade>
@{
    ViewData["title"] = "Index";
}

<div class="container p-3">

    <div class="row p-3 mt-3 mb-3">
        <div class="col-6">
            <h2>Grade List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Grade" asp-action="Upsert"
               class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;Create New Grade</a>
        </div>
    </div>

    <div>
        <table class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Grade</th>
                    <th>Minimum Score</th>
                    <th>Maximum Score</th>
                    <th>Weight</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var itm in Model)
                {
                    <tr>
                        <td width="18%">@itm.GradeLetter</td>
                        <td width="18%">@itm.MinScoreRange</td>
                        <td width="18%">@itm.MaxScoreRange</td>
                        <td width="18%">@itm.Weight</td>
                        <td>
                            <div class="text-end">
                                <a asp-controller="Grade" asp-action="Upsert" asp-route-Id="@itm.Id"
                               class="btn btn-primary"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                                <a asp-controller="Grade" asp-action="Delete" asp-route-Id="@itm.Id"
                               class="btn btn-danger"><i class="bi bi-trash-fill"></i>&nbsp;Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>


</div>