@model IEnumerable<StudInfoModel.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Upsert" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Student
			</a>
		</div>
	</div>
    <br /><br />

<table id="tblStudent" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Student Nos</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Sex</th>
            <th>Dept</th>
            <th>Program Name</th>
            <th></th>
                   
		</tr>
	</thead>
    

</table>
</div>



@section Scripts{
    <script src="~/js/student.js"></script>
}
