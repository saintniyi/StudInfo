@model IEnumerable<StudInfoModel.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Role" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Role
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblRoles" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>


    </table>
</div>



@section Scripts{
    <script src="~/js/role.js"></script>
}
