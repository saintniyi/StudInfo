@model IEnumerable<StudInfoModel.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Course
			</a>
		</div>
	</div>
    <br /><br />

<table id="tblCourse" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Unit</th>
            <th>Dept</th>
            <th>Lev</th>
            <th>Sem</th>
            <th></th>
		</tr>
	</thead>
    

</table>
</div>

@section Scripts{
    <script src="~/js/course.js"></script>
}
