@{
    ViewData["Title"] = "UpsertRemove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">

    <div class="container p-3">
        <div class="row pt-3">

            <div class="col-6">
                <h2 class="text-primary">Create Enrollment</h2>
            </div>
            <div class="col-6 text-end">
                <button type="button" id="btnAddRow" onclick="addNewRow()" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;Add New Row</button>
            </div>

            <div>
                <br /><br />
                <table id="myTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>GroupCode</th>
                            <th>CourseCode</th>
                            <th>StudNos</th>
                            <th>Level</th>
                            <th>Semester</th>
                        </tr>
                    </thead>

                    <tbody>
                    </tbody>

                </table>
            </div>

            <div class="text-end mt-3">
                <button type="button" id="btnSave" onclick="Save();" class="btn btn-md btn-info">&nbsp;Save</button>
            </div>

        </div>

    </div>

</form>


<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>


    $(document).ready(function() {
        addNewRow();
    })


    function addNewRow() {

        var row = `
                    <tr>
                        <td><input type="text" class="form-control" id="txtGroupCode" name="txtGroupCode" /></td>
                        <td><select id="ddlCourseCode" name="ddlCourseCode" class="form-select"></select></td>
                        <td><select id="ddlStudNos" name="ddlStudNos" class="form-select"></select></td>
                        <td><select id="ddlLevel" name="ddlLevel" class="form-select"></select></td>
                        <td><select id="ddlSemester" name="ddlSemester" class="form-select"></select></td>
                    </tr>
                `

        $("#myTable tbody").append(row);

        PopulateControlsByRow()
    }

        

    function PopulateControlsByRow() {

        var id = '@(ViewBag.id)'

        $('#myTable tbody tr').each(function(row, ele) {

            let txtGroupCode = $(this).find('input[id=txtGroupCode]')
            let ddlCourseCode = $(this).find('select[id=ddlCourseCode]')
            let ddlStudNos = $(this).find('select[id=ddlStudNos]')
            let ddlLevel = $(this).find('select[id=ddlLevel]')
            let ddlSemester = $(this).find('select[id=ddlSemester]')

            /* the two lines of code below, prevent dropdown values in top row(s) from loosing
            their values when a new row is added i.e. prevents selected dropdown items in top
            rows from resetting to the first item after a new row is added */
            kant = $('#myTable tbody tr').length
            if (row < (kant - 1)) return true

            txtGroupCode.val(id)
            txtGroupCode.prop('disabled', true);
            loadDropDowns(ddlCourseCode, "/Enrollment/LoadCourses")
            loadDropDowns(ddlStudNos, "/Enrollment/LoadStudNos")
            loadDropDowns(ddlLevel, "/Enrollment/LoadLevels")
            loadDropDowns(ddlSemester, "/Enrollment/LoadSemesters")
        });
    }


    
    function loadDropDowns(ddl, dataUrl) {

        $.ajax({
            type: "POST",
            url: dataUrl,
            success: function(data) {
                ddl.empty()
                $.each(data, function() {
                    //ddl.append($("<option></option>").val(this['value']).html(this['text']));
                    ddl.append($("<option />").text(this.value).text(this.text));
                });
            }
        })

    }



    function Save() {

        enrollments = [];

        $('#myTable tbody tr').each(function(row, ele) {

            var enrollment = {}

            let gcode = $(this).find('input[name=txtGroupCode]').val()
            enrollment.GroupCode = gcode

            let ccode = $(this).find('select[name=ddlCourseCode]').val()
            enrollment.CourseCode = ccode

            let studnos = $(this).find('select[name=ddlStudNos]').val()
            enrollment.StudNos = studnos

            let level = $(this).find('select[name=ddlLevel]').val()
            enrollment.Level = level

            let semester = $(this).find('select[name=ddlSemester]').val()
            enrollment.Semester = semester

            if (ccode == '--Select--' || studnos == '--Select--' || level == '--Select--' || semester == '--Select--') {
                return true
            }


            enrollments.push(enrollment)
        });

        //assign enrollments array to Enrollments property of the enrollmentVM object
        var enrollmentVM = {};
        enrollmentVM.Enrollments = enrollments;

        //send enrollmentVM object to server
        sendArrayToServer(enrollmentVM)
    }




    function sendArrayToServer(enrolVM) {
        $.ajax({
            type: "POST",
            url: "/Enrollment/SaveEnrollment",
            data: JSON.stringify(enrolVM),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(r) {
                toastr.success(r + " records successfully saved")
            }
        });
    }



</script>